<div class="jumbotron text-center">
  <h1>MY PHOTO ALBUM</h1>
</div>

<table class="table table-striped table-condensed">
  <% @photo.each do |photo| %>
  <tr>
    <td><%= photo.title %></td>
    <td><%= link_to 'show', photo_path(photo) %></td>
    <td><%= link_to '<span class="glyphicon glyphicon-cog"></span>編輯'.html_safe, edit_photo_path(photo) %></td>
    <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, photo_path(photo), method: :delete, data:{ confirm: "Are you sure?" } %></td>
  </tr>
  <% end %>
</table>

<buttom type="buttom" class="btn btn-default btn-sm-05">
  <%= link_to 'New Photo', new_photo_path %>
</buttom>